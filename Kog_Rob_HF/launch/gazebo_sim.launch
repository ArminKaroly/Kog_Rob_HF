<?xml version="1.0"?>
<launch>

  <arg name="x_pos" default="-5.5"/>
  <arg name="y_pos" default="5.5"/>
  <arg name="z_pos" default="0.0"/>
 
  <!-- Launch file parameters -->
  <arg name="paused"     default="true"/>
  <arg name="debug"      default="false"/>
  <arg name="gui"        default="true"/>
  <arg name="rate"       default="500" />
  <arg name="world_name" default="$(find koghf)/worlds/gazebo_sim.world" />


  <!-- Start up simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="paused"     value="$(arg paused)"/>
    <arg name="debug"      value="$(arg debug)"/>
    <arg name="gui"        value="$(arg gui)"/>
  </include>

  <param name="aruco_markers_description" command="$(find xacro)/xacro --inorder '$(find koghf)/urdf/markers.xacro'" />
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model my_awesome_model -param aruco_markers_description"/>
  
   <param name="robot_description" command="$(find xacro)/xacro --inorder $(find koghf)/urdf/turtlebot3_burger.xacro" />
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -model turtlebot3_burger -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

</launch>
